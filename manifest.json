{
    "manifest_version": 3,
    "name": "最近開いた Drive ファイル",
    "version": "1.0",
    "description": "Google Drive で最近開いたファイルを表示します。",
    "permissions": [
      "activeTab",
      "storage",
      "history"  // history パーミッションを追加
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }